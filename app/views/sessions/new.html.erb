<% provide(:title, "Sign in") %>
<h1>Identification</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password , "Mot de passe" %>
      <%= f.password_field :password %>

    <div class='center'>
        <br /><%= f.submit "S'identifier", class: "btn btn-large btn-primary" %>
    <% end %>
    
      <p><br />Vous n'etes pas encore inscrit ? <%= link_to "S'inscrire", signup_path %></p>
    </div>
  </div>
</div>