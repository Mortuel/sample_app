<% provide(:title, "Edit user") %> 
<h1>Modifier votre profil</h1>

<div class="row">
  <div class="span6 offset3">
  <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails">Changer</a><br /><br /><br /><br />

      <%= f.label :name , "Nom" %>
      <%= f.text_field :name %>

      <%= f.label :labo , "Labo" %>
      <%= f.text_field :labo %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password , "Mot de passe" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      <div class='center'>
        <br /><%= f.submit "Sauvegarder", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>